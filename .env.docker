# Docker Environment Configuration for Hana Salon

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret for Backend Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration (automatically configured in docker-compose)
MONGODB_URL=mongodb://admin:password123@mongodb:27017/hana_ai_salon?authSource=admin
DATABASE_NAME=hana_ai_salon

# Service URLs (automatically configured in docker-compose)
AI_SERVICE_URL=http://ai-service:8060

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Settings
DEBUG=True
LOG_LEVEL=INFO
NODE_ENV=production
