# Server Configuration
NODE_ENV=development
PORT=3060
HTTPS_PORT=8443
HOST=localhost
ENABLE_HTTPS=false

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Database (if needed later)
# DATABASE_URL=mongodb://localhost:27017/hana-ai
# REDIS_URL=redis://localhost:6379

# External Services
# AI_SERVICE_URL=http://localhost:8060
# OPENAI_API_KEY=your-openai-api-key-here

# Google Calendar Integration
GOOGLE_CALENDAR_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CALENDAR_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_CALENDAR_ID=primary
GOOGLE_CALENDAR_TIMEZONE=America/New_York
SALON_LOCATION=Your Salon Address, City, State

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
